{
  "name": "poolyaar",
  "version": "1.0.0",
  "description": "پول‌یار — مدیریت مالی شخصی",
  "main": "main.js",
  "author": {
    "name": "Poolyaar Team",
    "email": "support@poolyaar.app"
  },
  "license": "MIT",
  "homepage": "https://github.com/pvwvuow/poolyaar#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/pvwvuow/poolyaar.git"
  },
  "bugs": {
    "url": "https://github.com/pvwvuow/poolyaar/issues"
  },
  "keywords": [
    "electron",
    "finance",
    "personal-finance",
    "poolyaar",
    "money",
    "persian"
  ],
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --publish never",
    "build:win": "electron-builder --win --publish never",
    "build:installer": "electron-builder --win --config.win.target=nsis --publish never",
    "build:portable": "electron-builder --win --config.win.target=portable --publish never",
    "build:mac": "electron-builder --mac --publish never",
    "build:linux": "electron-builder --linux --publish never",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\""
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.poolyaar.desktop",
    "productName": "Poolyaar",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "*.html",
      "build/icon.*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publisherName": "Poolyaar Team"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Poolyaar",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/installerSidebar.bmp",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.finance",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Finance",
      "artifactName": "${productName}-${version}-linux.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "pvwvuow",
      "repo": "poolyaar"
    }
  }
}